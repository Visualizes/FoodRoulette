<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="32dp"
        android:gravity="center"
        android:text="Restaurant Type (need better name)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:id="@+id/myRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RadioButton
            android:text="Drive through"
            android:button="@null"
            android:background="@drawable/checkbox_background"
            android:layout_margin="2dp"
            android:id="@+id/driveThroughButton"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <RadioButton
            android:text="Fast food"
            android:button="@null"
            android:id="@+id/fastFoodButton"
            android:background="@drawable/checkbox_background"
            android:layout_margin="2dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <RadioButton
            android:text="Sit down"
            android:button="@null"
            android:background="@drawable/checkbox_background"
            android:layout_margin="2dp"
            android:id="@+id/sitDownButton"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </RadioGroup>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="Back"
            android:id="@+id/backButtonTS"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <Button
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="Next"
            android:id="@+id/nextButtonTS"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>